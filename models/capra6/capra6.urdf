<robot name="capra6">
    <link name="base_link">
        <visual>
            <geometry>
                <!-- <mesh filename="package://capra_gazebo/models/capra6/meshes/capra6V2.stl"/>-->
                <box size="0.6 0.6 0.2" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.15" />
        </visual>
        <inertial>
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
        <collision>
            <geometry>
                <box size="0.6 0.6 0.2" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.15" />
        </collision>
    </link>

    <joint name="joint1" type="fixed">
        <parent link="base_link" />
        <child link="laser" />
        <origin xyz="0.6 0 0.4" rpy="0 0 0" />
    </joint>
        
    <link name="laser">
        <visual>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </visual>
        <inertial>
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
        <collision>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </collision>
    </link>

    <gazebo reference="base_link">
        <gravity>false</gravity>
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="laser">
        <gravity>false</gravity>
        <material>Gazebo/Red</material>

        <sensor name="laser" type="ray">
            <pose>0.5 0 0.4 0 0 0</pose>
            <ray>
                <scan>
                    <horizontal>
                        <samples>540</samples>
                        <resolution>1</resolution>
                        <min_angle>-2.3562</min_angle>
                        <max_angle>2.3562</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.5</min>
                    <max>20</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="laser" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>laser</frameName>
            </plugin>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
            <visualize>true</visualize>
        </sensor>
    </gazebo>

    <gazebo>
        <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
            <commandTopic>/cmd_vel</commandTopic>
            <odometryTopic>/odom</odometryTopic>
            <odometryRate>20.0</odometryRate>
            <robotBaseFrame>base_footprint</robotBaseFrame>
        </plugin>

        <!-- see http://wiki.ros.org/hector_gazebo_plugins for gps and imu plugins-->

        <plugin name="gazebo_ros_gps" filename="libhector_gazebo_ros_gps.so" >
            <offset x="0" y="0" z="0" />
            <gaussianNoise x="0" y="0" z="0" />
            <referenceLatitude>45.501689</referenceLatitude>
            <referenceLongitude>-73.567256</referenceLongitude>
            <referenceHeading>0</referenceHeading>
            <bodyName>base_link</bodyName>
            <topicName>fix</topicName>
            <updateRate>100</updateRate>
        </plugin>

        <plugin name="gazebo_ros_imu" filename="libhector_gazebo_ros_imu.so">
            <bodyName>base_link</bodyName>
            <topicName>imu_data</topicName>
            <updateRate>100</updateRate>
            <headingGaussianNoise>0.0</headingGaussianNoise>
            <headingOffset>0.0</headingOffset>
        </plugin>

    </gazebo>


</robot>
